/* ============ LANGUAGE WELCOME MODAL STYLES - BLUE THEME ============ */
#language-welcome-modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(26, 35, 50, 0.9); /* Dark blue overlay */
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
}

#language-welcome-modal.hidden {
  display: none;
}

.language-welcome-content {
  background: #1a2332; /* Dark blue background */
  border: 3px solid #4a6491; /* Steel blue border */
  border-radius: 20px;
  width: 90%;
  max-width: 500px;
  display: flex;
  flex-direction: column;
  color: #c5d4e6; /* Light blue-grey text */
  box-shadow: 0 8px 32px rgba(26, 35, 50, 0.9);
  overflow: hidden;
  max-height: 80vh;
}

.language-welcome-header {
  background: linear-gradient(135deg, #4a6491, #7ba7d9); /* Blue gradient */
  color: #ffffff;
  padding: 2rem;
  text-align: center;
}

.language-welcome-header h2 {
  margin: 0 0 0.5rem 0;
  font-size: 1.8rem;
  font-weight: bold;
  font-family: 'Cinzel Decorative', serif;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.language-welcome-header p {
  margin: 0;
  font-size: 1rem;
  opacity: 0.9;
}

.language-selection-body {
  padding: 2rem;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  flex: 1;
  overflow: hidden;
}

.language-selection-body h4 {
  margin: 0 0 1rem 0;
  color: #7ba7d9; /* Steel blue for section headers */
  font-size: 1.1rem;
  font-family: 'Cinzel Decorative', serif;
}

.popular-languages {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  gap: 0.5rem;
  min-height: 200px;
  will-change: scroll-position;
}

.popular-language {
  background: rgba(74, 100, 145, 0.2); /* Light blue background */
  border: 2px solid #4a6491; /* Steel blue border */
  border-radius: 8px;
  padding: 0.5rem;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9rem;
  color: #c5d4e6; /* Light blue-grey text */
}

.popular-language:hover {
  background: rgba(123, 167, 217, 0.3);
  border-color: #7ba7d9;
}

.popular-language.selected {
  background: rgba(123, 167, 217, 0.4);
  border-color: #7ba7d9;
  box-shadow: 0 0 10px rgba(123, 167, 217, 0.5);
}

.language-search-section {
  border-top: 1px solid #4a6491;
  padding-top: 1rem;
}

.search-container {
  position: relative;
}

.language-search {
  width: 100%;
  padding: 0.8rem;
  padding-left: 2.5rem;
  background: rgba(26, 35, 50, 0.6);
  border: 2px solid #4a6491;
  border-radius: 8px;
  color: #c5d4e6;
  font-size: 1rem;
  box-sizing: border-box;
}

.language-search:focus {
  outline: none;
  border-color: #7ba7d9;
  box-shadow: 0 0 10px rgba(123, 167, 217, 0.3);
}

.language-search::placeholder {
  color: #4a6491;
  font-style: italic;
}

.search-icon {
  position: absolute;
  left: 0.8rem;
  top: 50%;
  transform: translateY(-50%);
  color: #4a6491;
  font-size: 1rem;
}

.language-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #1a2332; /* Dark blue background */
  border: 2px solid #4a6491;
  border-top: none;
  border-radius: 0 0 8px 8px;
  max-height: 200px;
  overflow-y: auto;
  z-index: 1000;
}

.language-dropdown.hidden {
  display: none;
}

.language-dropdown-item {
  padding: 0.8rem;
  cursor: pointer;
  border-bottom: 1px solid rgba(74, 100, 145, 0.3);
  color: #c5d4e6;
  transition: background 0.2s;
}

.language-dropdown-item:hover {
  background: rgba(74, 100, 145, 0.2);
}

.language-dropdown-item:last-child {
  border-bottom: none;
}

.selected-language-display {
  background: rgba(123, 167, 217, 0.2);
  border: 2px solid #7ba7d9;
  border-radius: 8px;
  padding: 1rem;
  margin-top: 1rem;
  text-align: center;
  font-weight: bold;
  color: #7ba7d9;
}

.language-confirm-section {
  border-top: 1px solid #4a6491;
  padding-top: 1.5rem;
  text-align: center;
  margin-top: auto;
}

.language-confirm-btn {
  background: linear-gradient(135deg, #4a6491, #7ba7d9); /* Blue gradient */
  border: none;
  border-radius: 10px;
  color: #ffffff;
  padding: 1rem 2rem;
  font-size: 1.1rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  min-width: 150px;
  font-family: 'Cinzel', serif;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
}

.language-confirm-btn:hover:not(:disabled) {
  background: linear-gradient(135deg, #7ba7d9, #9bb5d1);
  box-shadow: 0 4px 15px rgba(123, 167, 217, 0.4);
  transform: translateY(-1px);
}

.language-confirm-btn:disabled {
  background: #4a6491;
  color: #6c8bb3;
  cursor: not-allowed;
  opacity: 0.5;
}

.language-dropdown::-webkit-scrollbar {
  width: 8px;
}

.language-dropdown::-webkit-scrollbar-track {
  background: rgba(26, 35, 50, 0.5);
}

.language-dropdown::-webkit-scrollbar-thumb {
  background: #4a6491;
  border-radius: 4px;
}

@media (max-width: 480px) {
  .popular-languages {
    grid-template-columns: repeat(2, 1fr);
    gap: 0.4rem;
    max-height: none;
    overflow-y: visible;
  }
  
  .popular-language {
    padding: 0.4rem;
    font-size: 0.85rem;
  }
  
  .language-selection-body {
    padding: 1.5rem;
    max-height: 60vh;
    overflow-y: auto;
  }
  
  .language-welcome-header {
    padding: 1.5rem;
  }
  
  .language-welcome-header h2 {
    font-size: 1.5rem;
  }
}
